<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script>

    const paymentButton = document.getElementById("mercadopago-payment")
    paymentButton.addEventListener('click', () => {
        const siteUrl = document.getElementById('site-url').value;
        const notificationUrl = `${siteUrl}/notifications`

        const payer = {
            name: "Lalo",
            surname: "Landa",
            email: "test_user_46542185@testuser.com",
            phone: {
                area_code: "11",
                number: 22223333
            },
            address: {
                street_name: "Falsa",
                street_number: 123,
                zip_code: "1111"
            }
        }

        const productId = "1234";
        const productName = document.getElementById('product-name').innerHTML.trim();
        const productDescription = "Dispositivo moÃÅvil de Tienda e-commerce";
        const imagePath = document.getElementById('product-image').dataset.img;
        const productPictureUrl = siteUrl + imagePath.slice(1, imagePath.length);
        const productPrice = parseFloat(document.getElementById('product-price').innerHTML.trim());
        const productQuantity = 1;

        const item = {
            id: productId,
            title: productName,
            picture_url: productPictureUrl,
            description: productDescription,
            quantity: productQuantity,
            unit_price: productPrice
        }

        const externalReference = document.getElementById('external-reference').value;

        const data = {
            item: item,
            payer: payer,
            notificationUrl: notificationUrl,
            externalReference: externalReference,
        };

        axios.post('/create-preference', data)
        .then(function (response) {
            const init_point = response.data.init_point;
            window.location.href = init_point;

        })
        .catch(function (error) {
            console.log(error);
        });
    })
</script>