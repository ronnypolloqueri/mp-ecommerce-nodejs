<div class="as-search-wrapper" role="main">
    <div class="as-search-results as-filter-open as-category-landing as-desktop" id="as-search-results">

        <div id="accessories-tab" class="as-accessories-details">
            <div class="as-accessories" id="as-accessories">
                <div class="as-accessories-header">
                    <div class="as-search-results-count">
                        <span class="as-search-results-value"></span>
                    </div>
                </div>
                <div class="as-searchnav-placeholder" style="height: 77px;">
                    <div class="row as-search-navbar" id="as-search-navbar" style="width: auto;">
                        <div class="as-accessories-filter-tile column large-6 small-3">

                            <button class="as-filter-button" aria-expanded="true" aria-controls="as-search-filters" type="button">
                                <h2 class=" as-filter-button-text">
                                    Tu pago ha sido exitoso
                                </h2>
                            </button>


                        </div>

                    </div>
                </div>
                <div class="as-accessories-results  as-search-desktop">
                    <div class="width:60%">
                        <div class="as-producttile-tilehero with-paddlenav " style="float:left;">
                            <div class="as-dummy-container as-dummy-img">

                                <img src="./assets/wireless-headphones" class="ir ir item-image as-producttile-image  " style="max-width: 70%;max-height: 70%;"alt="" width="445" height="445">
                            </div>
                            <div class="images mini-gallery gal5 ">
                            

                                <div class="as-isdesktop with-paddlenav with-paddlenav-onhover">
                                    <div class="clearfix image-list xs-no-js as-util-relatedlink relatedlink" data-relatedlink="6|Powerbeats3 Wireless Earphones - Neighborhood Collection - Brick Red|MPXP2">
                                        <div class="as-tilegallery-element as-image-selected">
                                            <div class=""></div>
                                            <img id="product-image" data-img="{{img}}" src="./assets/003.jpg" class="ir ir item-image as-producttile-image" alt="" width="445" height="445" style="content:-webkit-image-set(url({{ img }}) 2x);">
                                        </div>
                                        
                                    </div>

                                    
                                </div>

                                

                            </div>

                        </div>
                        <div class="as-producttile-info" style="float:left;min-height: 168px;">
                            <div class="as-producttile-titlepricewraper" style="min-height: 128px;">
                                <div class="as-producttile-title">
                                    <h3 class="as-producttile-name">
                                        <p class="as-producttile-tilelink">
                                            <span id="product-name" data-ase-truncate="2"> {{ title }} </span>
                                        </p>

                                    </h3>
                                </div>
                                <h3>
                                    Información del pago
                                </h3>
                                <h3>
                                    Payment method id: {{ collection_id }}
                                </h3>
                                <h3>
                                    External Reference: {{ external_reference }}
                                </h3>
                                <h3>
                                    Payment id: {{ payment_id }}
                                </h3>
                                <h3>
                                    Información adicional del pago
                                </h3>
                                <h3>
                                    Collection status: {{ collection_status }}
                                </h3>
                                <h3>
                                    status: {{ status }}
                                </h3>
                                <h3>
                                    Payment type: {{ payment_type }}
                                </h3>
                                <h3>
                                    Merchand order id: {{ merchant_order_id }}
                                </h3>
                                <h3>
                                    Preference id: {{ preference_id }}
                                </h3>
                                <h3>
                                    Site id: {{ site_id }}
                                </h3>
                                <h3>
                                    Processing mode: {{ processing_mode }}
                                </h3>
                                <h3>
                                    Merchand account id: {{ merchant_account_id }}
                                </h3>
                            </div>
                            <input id="site-url" type="hidden" value="{{site_url}}">
                            <button type="submit" id="store" class="mercadopago-button" formmethod="post">Volver</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://www.mercadopago.com/v2/security.js" view="item"></script>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script>

    const paymentButton = document.getElementById("store")
    paymentButton.addEventListener('click', () => {
        const siteUrl = document.getElementById('site-url').value;
        window.location.href = siteUrl;
    });

</script>